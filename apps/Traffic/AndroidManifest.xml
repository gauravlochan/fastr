<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="in.beetroute.apps.traffic"
      android:versionCode="5"
      android:versionName="0.3.0">
    
    <uses-sdk android:minSdkVersion="7" />
	<uses-library android:name="com.google.android.maps" />
    
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
	<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.SEND_SMS" />
	<uses-permission android:name="android.permission.RECEIVE_SMS" />

    <application android:icon="@drawable/logo" 
                 android:label="@string/app_name"
                 android:theme="@style/Theme.GDCatalog"
                 android:name=".TrafficApplication"
                 android:debuggable="true">
                 
		<uses-library android:name="com.google.android.maps" />
        <receiver android:name="in.beetroute.apps.findme.ReceiveSMS" android:enabled="true">
		<intent-filter>
			<action android:name="android.provider.Telephony.SMS_RECEIVED" />
		</intent-filter>
		</receiver>
		<receiver android:name="SentConfirmation" android:enabled="true">
		<intent-filter>
			<action android:name="android.provider.Telephony.SMS_SENT" />
		</intent-filter>
		</receiver>
        <activity android:name=".activities.MainActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name=".activities.EnterAddressActivity"
                  android:label="@string/GetDirections">
            
        </activity>
        
        <activity android:name=".activities.RouteListActivity"
                  android:label="@string/TripList">
            
        </activity>
        <!-- 
        	Adding the FindMe activities.
         -->
        <activity android:name="in.beetroute.apps.findme.SendSMS"
            android:label="@string/app_name" >
         </activity>
         <activity
            android:name="in.beetroute.apps.findme.PlotRouteMap"
            android:label="@string/app_name" >          
        </activity>
         <activity
            android:name="in.beetroute.apps.findme.ShowDialog"
            android:label="@string/app_name" >          
        </activity>
            
        <activity android:name=".activities.ShowRouteActivity"
                  android:label="@string/ViewTrip">
        </activity>

            
        <service android:name="in.beetroute.apps.traffic.location.LocationService"
            	 android:enabled="true"> 
        </service>
        
        <receiver android:name=".MyBroadcastReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter >
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        
    </application>
</manifest>